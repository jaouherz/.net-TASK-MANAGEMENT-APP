@model TaskManagement.Models.Project

<h1 class="text-center mb-5">Create Project</h1>

<div class="container">
    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Project Name</label>
            <input asp-for="Name" class="form-control" id="Name" placeholder="Enter project name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Project Description</label>
            <textarea asp-for="Description" class="form-control" id="Description" placeholder="Enter project description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Create Project</button>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-4">
            <h5 class="alert-heading">Validation Errors</h5>
            <ul>
                @foreach (var state in ViewData.ModelState)
                {
                    <li>
                        <strong>@state.Key:</strong>
                        @string.Join(", ", state.Value.Errors.Select(e => e.ErrorMessage))
                    </li>
                }
            </ul>
        </div>
    }
    
